<?xml version="1.0"  encoding="ISO-8859-1"?>

<Configure class="org.eclipse.jetty.maven.plugin.JettyWebAppContext">
    <New id="datasource" class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg></Arg>
        <Arg>java:comp/env/jdbc/datasource</Arg>
        <Arg>
            <New class="org.apache.commons.dbcp.BasicDataSource">
                <Set name="driverClassName">com.mysql.jdbc.Driver</Set>
                <Set name="url">jdbc:mysql://localhost:3306/marcellavrigne</Set>
                <Set name="username">root</Set>
                <Set name="password">root</Set>
                <Set name="initialSize">5</Set>
                <Set name="maxActive">200</Set>
                <Set name="maxIdle">8</Set>
                <Set name="minIdle">0</Set>
                <Set name="validationQuery">Select 1</Set>
                <Set name="testOnBorrow">true</Set>
            </New>
        </Arg>
    </New>
</Configure>
